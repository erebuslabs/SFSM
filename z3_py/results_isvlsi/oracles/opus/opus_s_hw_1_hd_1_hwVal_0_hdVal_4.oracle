		}
		case(read1){
			if($ptext[2] == 0 ){$nextState = IOwait; $trans = read1.".".IOwait; $HW = 4;$HD = 4;}
		}
		case(write0){
			if($ptext[2] == 0 ){$nextState = IOwait; $trans = write0.".".IOwait; $HW = 4;$HD = 4;}
		}
	}
print "$trans\t$HW\t$HD\n";
	$currState = $nextState;
}#endwhile
