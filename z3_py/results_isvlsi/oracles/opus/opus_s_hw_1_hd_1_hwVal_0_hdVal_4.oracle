			elsif($ptext[2] == 0  && $ptext[4] == 1 ){$nextState = read0; $trans = RMACK_n.".".read0; $HW = 4;$HD = 4;}
		}
		case(WMACK){
			if($ptext[2] == 0  && $ptext[4] == 0 ){$nextState = WMACK_n; $trans = WMACK.".".WMACK_n; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0  && $ptext[4] == 1 ){$nextState = write0; $trans = WMACK.".".write0; $HW = 4;$HD = 4;}
