		}
		case(init0_n){
			if($ptext[2] == 1 ){$nextState = init0; $trans = init0_n.".".init0; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0 ){$nextState = init1; $trans = init0_n.".".init1; $HW = 4;$HD = 4;}
		}
		case(init1){
			if($ptext[2] == 0  && $ptext[3] == 0 ){$nextState = init1_n; $trans = init1.".".init1_n; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0  && $ptext[3] == 1 ){$nextState = init2; $trans = init1.".".init2; $HW = 4;$HD = 4;}
		}
		case(init1_n){
			if($ptext[2] == 0  && $ptext[3] == 0 ){$nextState = init1; $trans = init1_n.".".init1; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0  && $ptext[3] == 1 ){$nextState = init2; $trans = init1_n.".".init2; $HW = 4;$HD = 4;}
		}
		case(init2){
			if($ptext[2] == 0 ){$nextState = init4; $trans = init2.".".init4; $HW = 4;$HD = 4;}
		}
		case(init4){
			if($ptext[2] == 0  && $ptext[3] == 1 ){$nextState = init4_n; $trans = init4.".".init4_n; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0  && $ptext[3] == 0 ){$nextState = IOwait; $trans = init4.".".IOwait; $HW = 4;$HD = 4;}
		}
		case(init4_n){
			if($ptext[2] == 0  && $ptext[3] == 1 ){$nextState = init4; $trans = init4_n.".".init4; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0  && $ptext[3] == 0 ){$nextState = IOwait; $trans = init4_n.".".IOwait; $HW = 4;$HD = 4;}
		}
		case(IOwait){
			if($ptext[0] == 0  && $ptext[1] == 0  && $ptext[2] == 0  && $ptext[3] == 0 ){$nextState = IOwait_n; $trans = IOwait.".".IOwait_n; $HW = 4;$HD = 4;}
