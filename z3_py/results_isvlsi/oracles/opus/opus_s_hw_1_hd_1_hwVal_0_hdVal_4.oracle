			elsif($ptext[0] == 1  && $ptext[1] == 1  && $ptext[2] == 0  && $ptext[3] == 0  && $ptext[4] == 1 ){$nextState = WMACK; $trans = IOwait_n.".".WMACK; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0  && $ptext[3] == 1 ){$nextState = init2; $trans = IOwait_n.".".init2; $HW = 4;$HD = 4;}
		}
		case(RMACK){
			if($ptext[2] == 0  && $ptext[4] == 0 ){$nextState = RMACK_n; $trans = RMACK.".".RMACK_n; $HW = 4;$HD = 4;}
			elsif($ptext[2] == 0  && $ptext[4] == 1 ){$nextState = read0; $trans = RMACK.".".read0; $HW = 4;$HD = 4;}
