		case(IOwait_n){
			if($ptext[0] == 0  && $ptext[1] == 0  && $ptext[2] == 0  && $ptext[3] == 0 ){$nextState = IOwait; $trans = IOwait_n.".".IOwait; $HW = 4;$HD = 4;}
			elsif($ptext[0] == 1  && $ptext[1] == 0  && $ptext[2] == 0  && $ptext[3] == 0 ){$nextState = init1; $trans = IOwait_n.".".init1; $HW = 4;$HD = 4;}
			elsif($ptext[0] == 0  && $ptext[1] == 1  && $ptext[2] == 0  && $ptext[3] == 0  && $ptext[4] == 0 ){$nextState = read0; $trans = IOwait_n.".".read0; $HW = 4;$HD = 4;}
